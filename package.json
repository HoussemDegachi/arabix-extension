{
  "name": "arabix",
  "displayName": "Arabix",
  "version": "0.0.1",
  "description": "An ultimate solution to the arabizi problem.",
  "author": "Houssem Degachi",
  "manifest": {
    "permissions": ["commands"],
     "commands": {
      "transliterateInput": {
        "suggested_key": {
          "default": "Alt+T"
        },
        "description": "Transliterate an input to Arabic script"
      },
        "_execute_action": {
      "suggested_key": {
        "default": "Alt+A"
      }
    }
    },
    "host_permissions": [
      "https://*/*"
    ]
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "dayjs": "^1.11.13",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "3",
    "typescript": "5.3.3"
  }
}
